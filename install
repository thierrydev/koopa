#!/usr/bin/env bash
set -Eeux -o pipefail

## https://unix.stackexchange.com/questions/180383
## > bash -c "$(wget -O - http://example.com/my-script.sh)"

tmpdir="${TMPDIR:-/tmp}"
install="${tmpdir}/install-koopa.sh"
curl -o "$install" "https://raw.githubusercontent.com/acidgenomics/koopa/master/install"
chmod +x "$install"
"${install}"
rm "$install"
